fields @timestamp, eventName, requestParameters.instanceId
| filter eventSource = "ec2.amazonaws.com"
| filter eventName = "RunInstances"
| filter strftime(@timestamp, "%Y-%m") = strftime(now(), "%Y-%m")
| sort @timestamp desc
| display @timestamp, requestParameters.instanceId




fields @timestamp, eventName, requestParameters.instancesSet.items.instanceId
| filter eventSource = "ec2.amazonaws.com"
| filter eventName = "TerminateInstances"
| filter strftime(@timestamp, "%Y-%m") = strftime(now(), "%Y-%m")
| sort @timestamp desc
| display @timestamp, requestParameters.instancesSet.items.instanceId
